<div class="card-container bottom-space">
  <div class="row">
    <div class="col-xs-12">
      <div class="arqueo-card-container background-white flex-space-around flex-align-center mdc-elevation--z3">
        <div class="arqueo-card-content">
          <div class="graph-title no-padding">
            Total recibido en el día
          </div>
          <div class="huge-number flex-space-around">
            $ <%= subtotal_day(@entry_tickets, @exit_tickets) %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="arqueo-card-container background-white flex-space-around flex-align-center mdc-elevation--z3">
        <div class="arqueo-card-content">
          <div class="graph-title no-padding small-font-size">
            Ingresos registrados
          </div>
          <div class="big-number flex-space-around">
            <%= count_day_tickets(@entry_tickets) %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="arqueo-card-container background-white flex-space-around flex-align-center mdc-elevation--z3">
        <div class="arqueo-card-content">
          <div class="graph-title no-padding small-font-size">
            Vehículos parqueados en tu zona
          </div>
          <div class="big-number flex-space-around">
            <%= count_parked_vehicles(@zone_tickets) %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="arqueo-card-container background-white flex-space-around flex-align-center mdc-elevation--z3">
        <div class="arqueo-card-content">
          <div class="graph-title no-padding small-font-size">
            Salidas registradas
          </div>
          <div class="big-number flex-space-around">
            <%= count_day_closed_tickets(@exit_tickets) %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="arqueo-card-container background-white flex-space-around flex-align-center mdc-elevation--z3">
        <div class="arqueo-card-content">
          <div class="graph-title no-padding small-font-size">
            Vehículos reportados
          </div>
          <div class="big-number flex-space-around">
            <%= count_day_warned_tickets(@exit_tickets) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
